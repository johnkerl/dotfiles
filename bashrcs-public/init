# vim: set filetype=sh:

# This is intended to be sourced from ../bashrc.
# See also ./README.md for context.

self=$(__get_source_name)
selfdir=$(dirname $self)

__maybe_say INIT IS $self

# Source color-rc first so other scripts can use colorized output.
# Source prompt-rc last so that PATH is full.
for file in \
  color-rc \
  path-rc \
  general-rc \
  git-rc \
  quarto-rc \
  python-rc \
  cpp-rc \
  rust-rc \
  docker-rc \
  r-rc \
  java-rc \
  miller-rc \
  lumin-rc \
  prompt-rc
do
  __maybe_say INIT SOURCING $selfdir/$file
  . $selfdir/$file
done
